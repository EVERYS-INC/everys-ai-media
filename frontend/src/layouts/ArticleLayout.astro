---
import Layout from "./Layout.astro";
import Sidebar from "../components/Sidebar.astro";

const { title, recentPosts, popularPosts } = Astro.props;
---

<Layout title={title}>
  <div class="container mx-auto my-4 flex">
    <div class="w-3/4 pr-6">
      <slot />
    </div>
    <div class="w-1/4">
      <Sidebar recentPosts={recentPosts} popularPosts={popularPosts} />
    </div>
  </div>
</Layout>